@model DRD.WebApp.MVC.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Criar Produto";
    var categorias = (List<CategoriaViewModel>) ViewBag.categorias;
}

@if (ViewBag.resposta == true)
{
    <div class="container-fluid my-3">
    <div class="alert alert-success" role="alert">
        Produto criado com sucesso!
    </div>
</div>
}

<section class="section-conten padding-y container" style="min-height: 45vh">
    
    <vc:Summary></vc:Summary>

    <div class="card mx-auto" style="max-width: 380px; margin-top: 100px;">

        <div class="card-body">
            <h4 class="card-title mb-4">Adicione uma novo produto</h4>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <label asp-for="Nome">Nome do Prodtuo</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="Descricao">Descição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="NomeCategoria">Categoria</label>
                    <select asp-for="NomeCategoria" class="form-control"> 
                        @foreach(var categoria in categorias)
                        {
                            <option value="@categoria.Nome">@categoria.Nome</option>
                        }
                    </select>

                    <span asp-validation-for="NomeCategoria" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="QuantidadeEstoque">Quantidade Inicial</label>
                    <input asp-for="QuantidadeEstoque" class="form-control" />
                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="Valor">Valor</label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Imagem">Url da Imagem</label>
                    <input asp-for="Imagem" class="form-control" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-block">Salvar</button>
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
