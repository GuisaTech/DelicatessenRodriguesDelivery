@model DRD.WebApp.MVC.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Criar Categoria";
}

@if (ViewBag.resposta == true)
{
    <div class="container-fluid my-3">
    <div class="alert alert-success" role="alert">
        Categoria criada com sucesso!
    </div>
</div>
}

<section class="section-content padding-y container" style="min-height: 45vh">
    
    <vc:Summary></vc:Summary>

    <div class="card mx-auto" style="max-width: 380px; margin-top: 100px;">

        <div class="card-body">
            <h4 class="card-title mb-4">Adicione uma nova categoria</h4>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <label asp-for="Nome">Nome da Categoria</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="ImagemUrl">Url da Imagem</label>
                    <input asp-for="ImagemUrl" class="form-control" />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-block">Salvar</button>
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
